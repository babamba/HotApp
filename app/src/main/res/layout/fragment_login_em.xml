<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_login"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center" />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_gravity="center"
        android:background="@drawable/ellips"
        android:scaleType="center" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="#0000"
            android:text="@string/loginEm_title"
            android:textColor="#2A78E4"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:background="#ffff"
            android:hint="@string/loginEm_emailHint"
            android:inputType="textEmailAddress"

            android:padding="8dp"

            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/emailError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/loginEm_emailError"
            android:textColor="#f00"
            android:textSize="12dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonEm"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/whitebox"
            android:text="@string/loginEm_emailButton"
            android:textSize="12dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@android:drawable/presence_invisible" />


            <Button
                android:id="@+id/signUp"
                android:layout_width="43dp"
                android:layout_height="32dp"
                android:background="#0000"
                android:text="@string/loginEm_signup"
                android:textColor="#2A78E4"
                android:textSize="10dp" />


        </LinearLayout>


    </LinearLayout>


</FrameLayout>