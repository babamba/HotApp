<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center" />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_gravity="center"
        android:background="@drawable/ellips"
        android:scaleType="center" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="#0000"
            android:text="@string/loginEm_title"
            android:textColor="#2A78E4"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#ffff"
            android:hint="@string/loginFw_pwHint"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/pwError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/loginFw_pwError"
            android:textColor="#f00"
            android:textSize="12dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/login"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/whitebox"
                android:text="@string/loginFw_loginButton"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/find"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:background="@drawable/whitebox"
                android:text="@string/loginFw_findButton"
                android:textSize="12dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/autoLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/loginEm_autologin" />

            <ImageButton
                android:layout_width="23dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@android:drawable/presence_invisible" />


            <Button
                android:id="@+id/signUp"
                android:layout_width="43dp"
                android:layout_height="32dp"
                android:background="#0000"
                android:text="@string/loginFw_signup"
                android:textColor="#2A78E4"
                android:textSize="10dp" />


        </LinearLayout>


    </LinearLayout>


</FrameLayout>