<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center" />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_gravity="center"
        android:background="@drawable/ellips"
        android:scaleType="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#0000"
            android:text="@string/resetPw_title"
            android:textColor="#2A78E4"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/resetPw_subTitle"
            android:textColor="#2A78E4"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/resetPass"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#ffff"
            android:gravity="center"
            android:hint="@string/resetPw_hint"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="#000"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/resetPassChk"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#ffff"
            android:gravity="center"
            android:hint="@string/resetPw_checkHint"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/resetPassErr"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="@string/resetPw_error"
            android:textColor="#f00"
            android:textSize="12dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/resetPassErr1"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="@string/resetPw_checkError"
            android:textColor="#f00"
            android:textSize="12dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonResetPass"
            android:layout_width="43dp"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/whitebox"
            android:text="@string/resetPw_nextButton"
            android:textSize="10dp"
            android:textStyle="bold" />


    </LinearLayout>


</FrameLayout>