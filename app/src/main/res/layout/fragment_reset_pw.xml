<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scaleType="center"
        />

    <ImageView
        android:layout_gravity="center"
        android:layout_width="270dp"
        android:layout_height="270dp"

        android:scaleType="center"
        android:background="@drawable/ellips"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"

            android:background="#0000"
            android:textColor="#2A78E4"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="@string/resetPw_title"
            android:id="@+id/textView5" />

        <TextView
            android:text="@string/resetPw_subTitle"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textColor="#2A78E4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />

        <EditText android:id="@+id/editPassword"
            android:layout_width= "200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:textSize="12dp"
            android:inputType="textEmailAddress"
            android:hint="@string/resetPw_hint"

            android:padding="8dp"

            android:background="#ffff"
            android:textColor="#000"/>

        <EditText android:id="@+id/edittex2"
            android:layout_width= "200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:textSize="12dp"
            android:inputType="textEmailAddress"
            android:hint="@string/resetPw_checkHint"

            android:padding="8dp"

            android:background="#ffff"
            android:textColor="#000"/>

        <TextView
            android:text="@string/resetPw_error"
            android:id="@+id/textView"
            android:visibility="gone"
            android:textColor="#f00"
            android:textSize="12dp"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:text="@string/resetPw_checkError"
            android:id="@+id/textView2"
            android:visibility="gone"
            android:textColor="#f00"
            android:textSize="12dp"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>

        <Button
            android:text="@string/resetPw_nextButton"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_width="43dp"
            android:layout_height="32dp"
            android:id="@+id/button"
            android:background="@drawable/whitebox"
            />


    </LinearLayout>


</FrameLayout>