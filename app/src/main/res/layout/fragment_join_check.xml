<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-100dp"
        android:layout_marginTop="15dp"
        android:text="@string/joinCheck_title"
        android:textColor="#2A78E4"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="144dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/blackbox">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/joinCheck_firstContent" />

    </ScrollView>


    <CheckBox
        android:id="@+id/joinChk1"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        android:text="@string/joinCheck_firstCheck"
        android:textSize="11dp" />

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="144dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/blackbox">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/joinCheck_secondContent" />

    </ScrollView>

    <CheckBox
        android:id="@+id/joinChk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/joinCheck_secondCheck"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/checkError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/joinCheck_checkError"
        android:textColor="#f00"
        android:textSize="12dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonContinue"
            android:layout_width="67dp"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.01"
            android:background="#0000"
            android:text="@string/joinCheck_continue"
            android:textSize="12dp" />


    </LinearLayout>

</LinearLayout>